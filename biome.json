{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [".next/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "off",
        "useSelfClosingElements": "off",
        "useCollapsedElseIf": "error",
        "useForOf": "error"
      },
      "complexity": {
        "noForEach": "off",
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 15
          }
        },
        "noVoid": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noNewSymbol": "error",
        "noUnusedVariables": "warn"
      },
      "a11y": {
        "useButtonType": "off",
        "noSvgWithoutTitle": "warn"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      }
    }
  }
}
